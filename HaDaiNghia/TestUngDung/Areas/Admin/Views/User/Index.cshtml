
@model PagedList.IPagedList<ModelEF.Model.UserAccount>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}


<div class="card-header">
    <div class="row">
        <div class="col-md-6">
            <strong class='text-danger'>
                DANH SÁCH NGƯỜI DÙNG
            </strong>
        </div>
        <div class="col-md-6 text-right">
            <a class="btn btn-sm btn-success" href="#"><i class="fas fa-plus-circle"></i>Thêm</a>
        </div>
    </div>
</div>
<div class="card-body">
    @using (Html.BeginForm("Index", "User", FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-4">
                    <input type="text" name="searchString" />
                </div>
                <div class="col-md-4">
                    <button type="submit">Tìm kiếm</button>
                </div>
            </div>
        </div>
    }

    <table id="myTable" class="table table-triped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th class="text-center" style="width: 20px;">ID</th>
                <th>Tên tài khoản</th>
                <th>Mật khẩu</th>
                <th>Trạng thái</th>
                <th class="text-center">Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row_@item.ID">
                    <td class="text-center">@item.ID</td>
                    <td>@item.UserName</td>
                    <td>@item.Password</td>
                    <td>@item.Status</td>
                    <td class="text-center" style="padding-top: 35px">
                        @Ajax.ActionLink("Xóa", "Delete", new { @id = @item.ID }, new AjaxOptions
                   {
                       Confirm = "Bạn có muốn xóa ?",
                       OnComplete = "$('#row_" + @item.ID + "').remove()",
                       HttpMethod = "Delete"
                   })

                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page,@searchString = ViewBag.searchString }))
</div>